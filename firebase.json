{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "basketball_scoresheet.html",
      "registration.html",
      "DEPLOYMENT_GUIDE.md",
      "TIMER_DOCUMENTATION.md",
      "IMPLEMENTATION_SUMMARY.md",
      "README.md",
      "FIREBASE_SETUP.md",
      "firestore.rules"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      }
    ]
  }
}
